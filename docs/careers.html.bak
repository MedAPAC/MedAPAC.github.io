    .social-icon {
      display: inline-block;
      color: #aaa;
      background-color: #2c3034;
      width: 40px;
      height: 40px;
      line-height: 40px;
      border-radius: 50%;
      text-align: center;
      margin-left: 10px;
      transition: all 0.3s ease;
    }

    .social-icon:hover {
      color: #fff;
      background: linear-gradient(135deg, #0dcaf0, #17a2b8);
      transform: translateY(-3px);
    }

    @media (max-width: 768px) {
